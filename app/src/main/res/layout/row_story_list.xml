<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/story_list_cover_image"
        android:layout_width="@dimen/size_story_list_cover"
        android:layout_height="@dimen/size_story_list_cover"
        android:layout_marginBottom="@dimen/margin_typical"
        android:layout_marginStart="@dimen/margin_typical"
        android:layout_marginTop="@dimen/margin_typical"
        android:contentDescription="@string/cd_story_list_cover_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/story_list_title"
        style="@style/StoryListText.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_typical"
        android:layout_marginStart="@dimen/margin_typical"
        android:layout_marginTop="@dimen/margin_typical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/story_list_cover_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A Game of Thrones"/>

    <TextView
        android:id="@+id/story_list_author"
        style="@style/StoryListText.Author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_typical"
        android:layout_marginEnd="@dimen/margin_typical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/story_list_title"
        app:layout_constraintTop_toBottomOf="@+id/story_list_title"
        app:layout_constraintVertical_bias="0.0"
        tools:text="George R.R. Martin"/>

</android.support.constraint.ConstraintLayout>