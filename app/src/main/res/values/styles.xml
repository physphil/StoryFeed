<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Styles for common text appearances -->
    <style name="StoryListText">
    </style>

    <style name="StoryListText.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_story_title</item>
    </style>

    <style name="StoryListText.Author">
        <item name="android:textSize">@dimen/text_size_story_author</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
